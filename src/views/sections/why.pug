-
	var whyTitle = 'Чому варто придбати Медові горішки?';
	
	var reasons = [
		{
			img: 'img/why1.jpg',
			title: 'Корисно',
			content: 'Має цілющі властивості',
			delay: '0.05s'
		},
		{
			img: 'img/why2.jpg',
			title: 'Смачно',
			content: 'Кожна ложка - як маленька цукерка',
			delay: '0.1s'
		},
		{
			img: 'img/why3.jpg',
			title: 'Ситно',
			content: 'Усього 3 ложки і ви більше не голодні',
			delay: '0.2s'
		},
		{
			img: 'img/why4.jpg',
			title: 'Надійно',
			content: '100% натуральні продукти',
			delay: '0.3s'
		}
	];

+b.SECTION.why
	.container
		+e.H3.title.title-md=whyTitle
		+e.content.row
			each reason in reasons
				+e.column.col-12.col-sm-6.wow.fadeInUp(data-wow-delay=reason.delay)
					+e.item.flip-container.vertical(ontouchstart="this.classList.toggle('hover');")
						+e.item-flipper.flipper
							+e.item-front.front
								+e.item-front-image(src=reason.img)
							+e.item-back.back
								+e.item-back-background(src=reason.img)
								+e.item-back-content
									+e.P.item-back-title=reason.title
									+e.item-back-text
										p=reason.content